<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Profile</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <link rel="stylesheet" href="styles/profile.css">

  </head>

  <body>
    <!-- particles.js container -->
    <div id="particles-js"></div>
    <!-- stats - count particles -->
    <!-- <div class="count-particles">
      <span class="js-count-particles">--</span> particles
    </div> -->
    <!-- particles.js lib - https://github.com/VincentGarreau/particles.js -->

    <nav class="navbar navbar-expand-lg fixed-top">
      <a class="navbar-brand" href="#">SuperNotes</a>
      <button
      class="navbar-toggler collapsed" 
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavDropdown"
      aria-controls="navbarNavDropdown"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
    <i class="fa-solid fa-bars" style="color: #ffffff;"></i>
    </button>
    
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <form class="form-inline ml-auto" action="/search-notes" method="GET">
          <a class="btn btn-info mr-2" href="newnote.html">New Note</a>
          <input
          class="form-control mr-sm-2 custom-search-bar"
          type="search"
          name="query"
          placeholder="Search"
          aria-label="Search"
        />
        
          <button class="btn btn-outline-light my-2 my-sm-0 mr-2" type="submit">
            Search
          </button>
          <a class="btn btn-secondary mr-2" href="facesearch">Face Search</a>
        </form>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item size dropdown">
            
            <a
              class="nav-link dropdown-toggle font-size"
              href="#"
              id="navbarDropdownMenuLink"
              role="button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              <%= user.username %>
            </a>
            <div
              class="dropdown-menu dropdown-menu-right"
              aria-labelledby="navbarDropdownMenuLink"
            ><a href="/logout"><button class="dropdown-item" id="logout-button">Logout</button></a>
              
            </div>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <h2>Your Notes</h2>
      <a href="/profile" class="btn btn-outline-info mb-3 float-right"
        >Show All Notes</a
      >
      <div class="clearfix "></div>
      <div class="row justify-content-center ">
        <% notes.forEach(function(note) { %>
        <div class="col-md-6 mb-4">
          <div class="card shadow">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start">
                <h3 class="card-title"><%= note.personName %></h3>
                <button
                  class="btn btn-danger btn-sm delete-note"
                  data-note-id="<%= note._id %>"
                >
                  Delete
                </button>
              </div>
              <h4 class="card-title mt-2"><%= note.noteTopic %></h4>
              <p class="card-text"><%- note.noteText %></p>
              <a
                href="/update-note/<%= note._id %>"
                class="btn btn-primary btn-sm mt-2"
                >Update</a
              >
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/scripts/profile.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/webcamjs/1.0.25/webcam.min.js"></script>


    <script src="http://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script> <!-- stats.js lib -->
    <script src="http://threejs.org/examples/js/libs/stats.min.js"></script>
<script src="js/app.js"></script>
    
  </body>
</html>
