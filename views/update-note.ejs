<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Update Note</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <style>
        body {
            background-color: #f7f8fa;
            font-family: 'Arial', sans-serif;
        }

        .container {
            max-width: 800px;
        }
        #particles-js {
  position: fixed;
  z-index: -1; /* Lower z-index than content */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;

  background-color: #2c3e50;
}

        h2 {
            color: #333;
            font-weight: 600;
            border-bottom: 1px solid #e5e5e5;
            padding-bottom: 15px;
            margin-bottom: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .form-group {
            margin-bottom: 25px;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h2>Update Note</h2>
        <form action="/note/<%= note._id %>/update" method="post">
            <div class="form-group">
                <label for="personName">Person's Name:</label>
                <input type="text" class="form-control" id="personName" name="personName" value="<%= note.personName %>"
                    required>
            </div>
            <div class="form-group">
                <label for="noteTopic">Note Topic:</label>
                <input type="text" class="form-control" id="noteTopic" name="noteTopic" value="<%= note.noteTopic %>"
                    required>
            </div>
            <div class="form-group">
                <label for="noteText">Note Text:</label>
                <!-- Create editor container -->
                <div id="editor" style="height:200px;">
                    <%- note.noteText %>
                </div>

                <!-- Hidden textarea to send data to server -->
                <textarea name="noteText" id="hiddenNoteText" style="display:none;"></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Update Note</button>
        </form>
    </div>

    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        var quill = new Quill('#editor', {
          theme: 'snow'
        });
        document.querySelector("form").onsubmit = function() {
          document.getElementById('hiddenNoteText').value = quill.root.innerHTML;
        };
    </script>
    <script src="js/app.js"></script>
</body>

</html>
